<%# <h1>Sessions#new</h1>
<p>Find me in app/views/sessions/new.html.erb</p> %>
<% if alert %>
  <div class="p-4 mb-4 text-sm text-red-800 rounded-lg bg-red-50 dark:bg-gray-800 dark:text-red-400" role="alert">
    <span class="font-medium"><%= alert %></span>
  </div>
<% end %>

<div class=" flex justify-center mt-28">
<h4 class="text-4xl">Login</h4>
<%= form_tag sessions_path do |form| %>
<div class="ml-[-80px]">
  <div class="mt-20 mb-5">
    <%= label_tag :email %>
    <%= text_field_tag :email  , nil, class: "ml-14" %>
  </div>
  <div class="mb-5">
    <%= label_tag :password %>
    <%= password_field_tag :password , nil, class: "ml-7" %>
  </div>
  <div class="mb-5" >
    <%= submit_tag "Login", class: "text-purple-700 hover:text-white border border-purple-700 hover:bg-purple-800 focus:ring-4 focus:outline-none focus:ring-purple-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center me-2 mb-2 dark:border-purple-400 dark:text-purple-400 dark:hover:text-white dark:hover:bg-purple-500 dark:focus:ring-purple-900" %>
  </div>
  </div>
<% end %>
</div>